<div class="row">
		<div class="col-xs-12 col-md-6 col-md-offset-3 text-center box-shadow">
			<h1><%= @cocktail.name.capitalize %></h1>
			<%= cl_image_tag @cocktail.cocktail_img, height: 300, width: 400, crop: :fill %>
			<h2>Recipe:</h2>
			<ul class = "list-style-none">
				<% @cocktail.doses.each do |dose| %>
				<li><%= dose.description %> of <%= dose.ingredient.name%></li>
				<% end %>	
			</ul>
			<h3>Select an ingredient</h3>
				<div class="ingredient-card">
					  <%= simple_form_for [@cocktail, @dose] do |f| %>
			          <%= f.input :ingredient_id, collection: @ingredients  %>
			          <%= f.input :description %>
			          <%= f.submit "add an ingredient", class: "btn btn-primary" %>
			        <% end %>
				</div>
				
			</div>
		</div>
	</div>