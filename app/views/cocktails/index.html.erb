<h1>Welcome to Mr Cocktail!</h1>
<%= link_to "Add your cocktail", new_cocktail_path, class: "btn btn-primary" %>
<div class="container">
	<% @cocktails.each do |cocktail| %>
	  <div class="cocktail-card">
	  	<%= cocktail.name %>
	  	<%= link_to "View Ingredients", cocktail_path(cocktail), class: "btn btn-success" %>
	  </div>
	<% end %>
</div>
