<h1>Welcome to Mr Cocktail!</h1>
<%= link_to "Add your cocktail", new_cocktail_path, class: "btn btn-primary" %>
<div class="container">
	<% @cocktails.each do |cocktail| %>
	  <div class="cocktail-card">
	  	<%= cl_image_tag cocktail.cocktail_img, height: 200, width: 200, crop: :fill %>
	  	<%= cocktail.name %>
	  	<%= link_to "View Ingredients", cocktail_path(cocktail), class: "btn btn-success" %>
	  	<%= link_to "Delete", cocktail_path(cocktail), method: :delete, class: "btn btn-warning" %>
	  </div>
	<% end %>
</div>
